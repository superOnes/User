/**app.wxss**/
.container{
  position: relative;
  width: 100%;
  height: 100%;
  background: #f2f2f2;
}
text{
  font-size: 32rpx;
}
.radio-group radio{
  margin-right: 15rpx;
  transform: scale(.8);
}
modal textarea{
  display: block;
  margin: 0 auto;
  width: auto;
}
textarea{
  padding: 10rpx 14rpx 0;
  border-radius: 10rpx;
  border: 1px solid #e2e2e2;
  height: 140rpx; 
}
.btnColor{
  background: #fa7737;
  border-radius: 0;
  color: #fff;
  border: none;
}
button[disabled]:not([type]){
  color: #fff;
  background: rgba(34, 152, 240, .7);
}

.inputBorder{
  display: block;
  min-width: 60%;
  border: 1px solid #999;
  padding: 5rpx 15rpx;
  font-size: 28rpx;
  color: #333;
  border-radius: 5px;
}

.tab{
  position: fixed;
  z-index: 999;
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  display: -webkit-flex;
  justify-content: space-around;
  background: #fff;
  padding: 10rpx 0;
}
.tab>view{
  width: 50%;
  text-align: center;
}
.tab>view:first-child{
  border-right: 1px solid #e6e6e6;
}
.tab>view text{
  display: block;
  margin: -10rpx auto;
  width: 80%;
  line-height: 80rpx;
}
.tab>view .active{
  border-bottom: 2px solid #fa7737;
  color: #fa7737;
}


/* 为空样式 */
.isEmpty{
  width: 100%;
  margin-top: 300rpx;
}
.isEmpty image{
  display: block;
  margin: 0 auto;
  width: 300rpx;
  height: 300rpx;
}
.isEmpty view{
  text-align: center;
  margin-top: 40rpx;
  color: #F56C42;
}