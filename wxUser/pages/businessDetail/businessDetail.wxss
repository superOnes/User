/* pages/businessDetail/businessDetail.wxss */
.bussinessWrap>view:first-child{
  background: #f2f2f2;
  font-size: 32rpx;
  padding: 10rpx 40rpx;
}
.bussinessWrap>view>text{
  display: block;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #999;
}
.bussinessWrap>view>text:first-child{
  color: #333;
  font-size: 32rpx;
}
.bussinessList{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 40rpx;
  border-bottom: 1px solid #e2e2e2;
}
.bussinessWrap>.bussinessList>text{
  font-size: 40rpx;
  color: #333;
}

.bussinessList>view>text:last-child{
  color: #999;
  font-size: 32rpx;
}
.bussinessWrap>.bussinessList>.textColor{
  color: #fa7737;
}
.bussinessList>view>text{
  display: block;
  line-height: 50rpx;
}

.noData{
  width: 100%;
  text-align: center;
  margin-top: 250rpx;
}
.noData icon image{
  display: block;
  margin: 0 auto;
  width: 200rpx;
  height: 200rpx;
}
.noData text{
  font-size: 36rpx;
  color: #F56C42;
  line-height: 100rpx;
}