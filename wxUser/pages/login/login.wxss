/* pages/login/login.wxss */
.logoWrap{
  display: block;
  margin-bottom: 50rpx;
}
.logoWrap image{
  display: block;
  margin: 100rpx auto;
  width: 200rpx;
  height: 250rpx;
}
.formWrap{
  padding: 0 60rpx;
}
.formWrap form input{
  display: block;
  border: 1px solid #919293;
  border-radius: 5px;
  margin-top: 40rpx;
  font-size: 32rpx;
  padding: 10rpx 20rpx;
}
.formWrap form view:first-of-type{
  text-align: right;
}
.formWrap form view navigator{
  display: inline-block;
}
.formWrap form view{
  color: #999;
  font-size: 26rpx;
  text-align: center;
  line-height: 70rpx;
}
.formWrap form view button{
  background: #fa7737;
  color: #fff;
  border: none;
}