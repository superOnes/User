/* pages/editPassword/editPassword.wxss */
.inputWrap{
  margin: 20rpx 0;
  padding: 100rpx 50rpx;
  background: #fff;
}
.inputWrap>view text{
  display: block;
  line-height: 50rpx;
  text-align: center;
}
.inputWrap>view text:last-child{
  color: #9C9A9A;
}
.inputWrap form{
  display: block;
  padding: 0 40rpx;
}
.inputWrap form view{
  margin-top: 50rpx;
  overflow: hidden;
}
.inputWrap form view input{
  border: 1px solid #e5e5e5;
  padding: 15rpx 30rpx;
  font-size: 28rpx;
  border-radius: 5px;
  color: #999;
}
.inputWrap form view button{
  margin-top: 30rpx;
  border-radius: 5px;
}