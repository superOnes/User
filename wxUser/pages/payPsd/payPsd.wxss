/* pages/payPsd/payPsd.wxss */
.wrap{
  display: block;
  width: 80%;
  margin: 100rpx auto;
}
.wrap view{
  text-align: center;
}
.wrap view text{
  display: block;
  line-height: 60rpx;
}
.wrap view text:last-child{
  color: #9C9A9A;
}
.formWrap view, .formWrap1 view{
  display: flex;
  display: -webkit-flex;
  margin-top: 40rpx;
}
.formWrap view button{
  width: 40%;
  background: #2298f0;
  color: #fff;
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
  font-size: 28rpx;
}
.formWrap view input, .formWrap1 view input {
  width: 100%;
  border-radius: 5px;
  text-align: left;
  padding: 10rpx 50rpx;
  border: 1px solid #e5e5e5;
  color: #999;
  font-size: 32rpx;
}
.formWrap view:first-of-type input{
  width: 60%;
  margin-right: -20rpx;
}
.formWrap view:last-of-type{
  margin-top: 80rpx;
}
.formWrap view:last-of-type button, .formWrap1 view:last-of-type button{
  width: 100%;
  border-radius: 5px;
  background: #fa7737;
}
.formWrap1 .forgetPassword{
  display: block;
  margin: 0;
  text-align: right;
}
.formWrap1 .forgetPassword text{
  font-size: 28rpx;
}