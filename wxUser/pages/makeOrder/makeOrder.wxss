/* pages/makeOrder/makeOrder.wxss */

.container {
  background: #f2f2f2;
}
.container>view {
  width: 100%;
  background: #fff;
  margin: 0;
  margin-bottom: 20rpx;
  overflow: hidden;
}
.addressWrap view {
  margin: 0 auto;
  display: -webkit-flex;
  display: flex;
  width: 90%;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #e5e5e5;
}
.addressWrap view:last-child{
  border: none;
}
.addressWrap view icon image {
  width: 40rpx;
  height: 50rpx;
}

.addressWrap view navigator image {
  width: 45rpx;
  height: 45rpx;
}
.addressWrap view navigator:first-of-type{
  width: calc(100% - 200rpx);
}
.addressWrap view navigator{
  padding: 20rpx;
}
.addressWrap view navigator text {
  display: block;
  padding: 0 30rpx;
  margin: 0 ;
  width: calc(100% - 60rpx);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  line-height: 40rpx;
  color: #666;
  font-size: 32rpx;
}


/* 其它信息
 */
.otherMsg{
  text-align: center;
}
.otherMsg>view{
  display: inline-block;
  width: calc(49% - 60rpx);
  padding: 0 30rpx;
  vertical-align: middle;
  text-align: left;
}
.otherMsg>view:first-child{
  border-right: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
}
.otherMsg>view:last-child{
  margin-top: -2rpx;
  border-left: 1px solid #e5e5e5;
  border-top: 1px solid #e5e5e5;
}
.otherMsg view icon{
  vertical-align: middle;
}
.otherMsg view text{
  font-size: 32rpx;
  vertical-align: middle;
}
.otherMsg view navigator text {
  color: #999;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;

}

.iconSize image{
  display: block;
  margin-right: 20rpx;
  width: 36rpx;
  height: 36rpx;
}
.iconSize1 image{
  display: block;
  margin-left: 20rpx;
  width: 14rpx;
  height: 20rpx;
}
.otherMsg view navigator{
  display: flex;
  display: -webkit-flex;
  justify-content:space-between;
  align-items: center;
  margin: 40rpx 0;
}
.otherMsg view picker{
  position: relative;
  margin: 40rpx 0;
  font-size: 32rpx;
  border: none;
  text-align: left;
  color: #999;
}
.otherMsg view picker .iconSize1{
  position: absolute;
  right: 0;
  top: 12rpx;
}
.otherMsg view navigator .iconSize1{
  float: right;
}

.otherOptions>view{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 40rpx;
  border-bottom: 1px solid #f2f2f2;
}
.otherOptions>view:last-child{
  justify-content: space-around;
}
.otherOptions>view text, .otherOptions>view .iconSize{
  display: inline-block;
  vertical-align: middle;
  font-size: 28rpx;
}
.otherOptions>view picker view{
  font-size: 32rpx;
}

.container .otherTip{
  width: auto;
  background: none;
  padding: 20rpx 40rpx;
}
.otherTip text{
  font-size: 28rpx;
}

.container .makeOrder{
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  margin: 0; 
  border-top: 1px solid #f2f2f2;
}
.makeOrder>text{
  padding-left: 40rpx;
  color: #fa7737;
}
.makeOrder>text text{
  font-size: 44rpx;
}
.container .makeOrder view text{
  display: block;
  padding: 20rpx 40rpx;
  background: #C6C2C2;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
}
.container .makeOrder view .okBtn{
  background: #fa7737;
}

