/* pages/billmanage/billmanage.wxss */
page{
  background: #f2f2f2;
}


.cardWrap{
  display: block;
  margin: 100rpx 0 80rpx;
}
.listEvery{
  display: block;
  margin: 0 30rpx 20rpx;
  border-radius: 5px;
  background: #fff;
}
.listEvery>view{
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #e5e5e5;
}
.listEvery view text{
  font-size: 28rpx;
}
.listEvery view text:last-child{
  color: #fa7737;
}
.listEvery view:nth-child(2){
  display: block;
}
.listEvery view:nth-child(2) view{
  line-height: 60rpx;
}
.listEvery view:nth-child(2) view:last-child{
  text-align: right;
  font-size: 24rpx;
  line-height: 40rpx;
}
.listEvery view:nth-child(2) view text{
  color: #fa7737;
}
.listEvery .last{
  /* width: 100%; */
  padding: 15rpx;
}
.listEvery .last button{
  margin: 0;
  /* border: 1px solid #fa7737;
  border-radius: 5px;
  background: #fff;
  color: #fa7737; */
  font-size: 26rpx;
}
.btnConfirm{
  position: fixed;
  z-index: 999;
  bottom: 0;
  left: 0;
  width: calc(100% - 20rpx);
  display: flex;
  display: -webkit-flex;
  padding-left: 20rpx;
  justify-content: space-between;
  align-items: center;
  background: #fff;
}
.btnConfirm radio{
  transform: scale(.8);
}
.btnConfirm view{
  padding: 15rpx 30rpx;
  font-size: 32rpx;
}
.btnConfirm view text{
  color: #fa7737;
}
.btnConfirm view:nth-child(2){
  width: calc(100% - 350rpx);
}